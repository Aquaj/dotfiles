	email = jeremie.bonal@gmail.com
	name = Jérémie
  signingKey = 761E02D9D1736F4D

[http]
  postBuffer = 524288000

[github]
  user = Aquaj

[gpg]
	program = gpg

[commit]
  gpgsign = true
